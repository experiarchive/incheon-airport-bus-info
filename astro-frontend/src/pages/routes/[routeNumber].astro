      <!-- Enhanced Route Information from JSON -->
      {jsonData && (
        <div class="mt-6 border-t border-gray-200 dark:border-gray-700 pt-6">
          <ul class="space-y-6 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-6">
