<div id="airport-congestion-container" class="mt-8 mb-8 bg-white rounded-lg shadow-sm border border-gray-100 p-6">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-xl font-bold flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
      인천공항 출국장 실시간 혼잡도
    </h3>
    <span id="update-time" class="text-xs text-gray-500 font-mono">업데이트 중...</span>
  </div>

  <div id="loading-indicator" class="flex justify-center py-8">
    <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
  </div>

  <div id="congestion-content" class="hidden space-y-8">
    <!-- T1 Section -->
    <div>
      <h4 class="text-lg font-bold text-blue-800 border-l-4 border-blue-600 pl-2 mb-4">제1여객터미널 (T1)</h4>
      <div id="t1-gates" class="grid grid-cols-2 md:grid-cols-4 gap-3">
        <!-- Content injected via JS -->
      </div>
      
      <!-- Recommendations Section (Hidden by default) -->
      <div id="recommendations-container" class="mt-6 hidden animate-fade-in-up">
        <div class="bg-blue-50 border border-blue-100 rounded-lg p-4">
             <h5 class="text-sm font-bold text-blue-900 mb-3 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                혼잡한 출국장 근처 대기 추천 장소 (일반지역)
             </h5>
             <div id="recommendations-list" class="grid grid-cols-1 md:grid-cols-2 gap-3">
                <!-- Injected via JS -->
             </div>
        </div>
      </div>
    </div>

    <!-- T2 Section -->
    <div>
      <h4 class="text-lg font-bold text-green-800 border-l-4 border-green-600 pl-2 mb-4">제2여객터미널 (T2)</h4>
      <div id="t2-gates" class="grid grid-cols-2 md:grid-cols-4 gap-3">
        <!-- Content injected via JS -->
      </div>
    </div>
    
    <div class="text-right mt-2">
      <p class="text-[10px] text-gray-400">데이터 제공: 인천국제공항공사 (API 상태에 따라 지연될 수 있습니다)</p>
    </div>
  </div>

  <div id="api-error" class="hidden text-center py-4 bg-red-50 rounded-lg">
    <p class="text-sm text-red-600">데이터를 불러올 수 없습니다. 잠시 후 다시 시도해주세요.</p>
  </div>
</div>

<script>
  // Global Data Store
  let congestionData = [];
  let facilitiesData = [];

  // Client-side script to fetch API data
  async function fetchCongestionData() {
    // Fetch from our own Vercel Serverless Function
    const URL = '/api/congestion';

    try {
      const response = await fetch(URL, { headers: { 'Accept': 'application/json' } });
      if (!response.ok) {
        throw new Error(`Network response was not ok: ${response.status}`);
      }
      const data = await response.json();
      
      let items = [];
      if (data.response && data.response.body && data.response.body.items) {
        items = data.response.body.items;
      } else if (Array.isArray(data)) {
        items = data; // Fallback structure
      }

      if (items.length > 0) {
        congestionData = items; // Store globally
        renderCongestion(items);
        document.getElementById('loading-indicator').classList.add('hidden');
        document.getElementById('congestion-content').classList.remove('hidden');
        
        // After congestion data is loaded, try to load facility recommendations
        fetchFacilities(); 

      } else {
        throw new Error('No data received');
      }

    } catch (error) {
      console.error('API Fetch failed:', error);
      // Fallback to Mock Data (Client-side failover)
      renderMockData(); 
    }
  }
  
  async function fetchFacilities() {
      try {
          const res = await fetch('/api/facilities');
          if (res.ok) {
              const json = await res.json();
              if (json.response?.body?.items) {
                  facilitiesData = json.response.body.items;
                  renderRecommendations(); 
              }
          }
      } catch (e) {
          console.warn('Failed to fetch facilities:', e);
      }
  }

  function renderMockData() {
    // Realistic fallback data matching API Reference
    const mockItems = [
      { gateId: 'DG1_E', waitTime: '15', waitLength: '45', terminalId: 'P01', occurtime: '20240101120000' },
      { gateId: 'DG2_E', waitTime: '25', waitLength: '80', terminalId: 'P01', occurtime: '20240101120000' },
      { gateId: 'DG3_E', waitTime: '10', waitLength: '20', terminalId: 'P01', occurtime: '20240101120000' },
      { gateId: 'DG4_E', waitTime: '35', waitLength: '120', terminalId: 'P01', occurtime: '20240101120000' },
      { gateId: 'DG5_E', waitTime: '5', waitLength: '10', terminalId: 'P01', occurtime: '20240101120000' }
    ];
    
    congestionData = mockItems;
    renderCongestion(mockItems);
    document.getElementById('loading-indicator').classList.add('hidden');
    document.getElementById('congestion-content').classList.remove('hidden');
    
    // Simulate facilities fetch on mock
    fetchFacilities(); // Will likely fail in dev unless api exists, but api exists now.
    
    const timeElement = document.getElementById('update-time');
    if (timeElement) timeElement.textContent = '예시 데이터 (실시간 연결 실패)';
  }

  function renderCongestion(data) {
    const t1Container = document.getElementById('t1-gates');
    const t2Container = document.getElementById('t2-gates');
    const timeElement = document.getElementById('update-time');

    if (!t1Container || !t2Container) return;

    t1Container.innerHTML = '';
    t2Container.innerHTML = '';

    let lastUpdate = '';

    const gateMapping = {
      'DG1_E': '2번 출국장 (동)', 
      'DG1_W': '1번 출국장 (서)', 
      'DG2_E': '2번 출국장 (스마트패스)', 
      'DG2_W': '2번 출국장 (서)',
      'DG3_E': '3번 출국장 (동)', 'DG3_W': '3번 출국장 (서)',
      'DG4_E': '4번 출국장 (동)', 'DG4_W': '4번 출국장 (서)',
      'DG5_E': '5번 출국장 (동)', 'DG5_W': '5번 출국장 (서)',
      'DG6_E': '6번 출국장 (동)', 'DG6_W': '6번 출국장 (서)'
    };
    
    // Sort logic
    data.sort((a, b) => {
       const idA = a.gateId || '';
       const idB = b.gateId || '';
       return idA.localeCompare(idB);
    });
    
    data.forEach(item => {
      const minutes = parseInt(item.waitTime || 0);
      const people = parseInt(item.waitLength || 0);
      const rawGateId = item.gateId || '';
      
      // Filter Logic
      if (rawGateId.startsWith('DG6') || rawGateId === 'DG1_W') return; 
      
      // Determine Name
      let name = gateMapping[rawGateId] || rawGateId;
      if (!gateMapping[rawGateId] && rawGateId.startsWith('DG')) {
           const num = rawGateId.charAt(2);
           const direction = rawGateId.includes('_E') ? '(동)' : (rawGateId.includes('_W') ? '(서)' : '');
           if (!isNaN(parseInt(num))) {
               name = `${num}번 출국장 ${direction}`;
           }
      }
      
      // Keep name in item object for later linking
      item.displayName = name; 

      const cardHtml = createGateCard(name, minutes, people);

      if (item.terminalId === 'P01') { // T1
        t1Container.innerHTML += cardHtml;
      } else if (item.terminalId === 'P02') { // T2
        t2Container.innerHTML += cardHtml;
      }

      if (item.occurtime && !lastUpdate) {
          const t = item.occurtime;
          if (t.length >= 12) {
             lastUpdate = `${t.substring(8, 10)}:${t.substring(10, 12)}`;
          }
      }
    });
    
    // Hide T2 if empty
    const t2Section = t2Container.parentElement;
    if (t2Container.innerHTML.trim() === '') {
       t2Container.innerHTML = '<div class="col-span-full text-center py-6 bg-gray-50 rounded-lg"><p class="text-sm text-gray-400">현재 제2여객터미널(T2) 데이터는 API에서 제공되지 않습니다.</p></div>';
    }

    if (timeElement && lastUpdate) {
      timeElement.textContent = `오늘 ${lastUpdate} 기준`;
    }
  }

  function createGateCard(name, minutes, people) {
    let status = '원활';
    let colorClass = 'bg-blue-50 text-blue-700 border-blue-200';
    let dotClass = 'bg-blue-500';
    
    // 20/30/40 Rule
    if (minutes >= 40) {
      status = '매우 혼잡';
      colorClass = 'bg-red-50 text-red-700 border-red-200';
      dotClass = 'bg-red-500';
    } else if (minutes >= 30) {
      status = '혼잡';
      colorClass = 'bg-orange-50 text-orange-700 border-orange-200';
      dotClass = 'bg-orange-500';
    } else if (minutes >= 20) {
      status = '보통';
      colorClass = 'bg-yellow-50 text-yellow-700 border-yellow-200';
      dotClass = 'bg-yellow-500';
    } else {
      status = '원활';
      // Smooth - Green
      colorClass = 'bg-green-50 text-green-700 border-green-200';
      dotClass = 'bg-green-500';
    }

    return `
      <div class="border rounded-lg p-4 flex flex-col items-center justify-center text-center ${colorClass} transition-all duration-300 hover:shadow-md">
        <span class="text-sm font-semibold text-gray-600 mb-2">${name}</span>
        <div class="text-3xl font-bold flex items-end gap-1 mb-1">
          ${minutes}<span class="text-lg font-medium mb-1">분</span>
        </div>
        <div class="text-sm text-gray-700 font-medium">
           대기 <span class="font-bold">${people}</span>명
        </div>
        <div class="flex items-center gap-1.5 mt-3 px-3 py-1 rounded-full bg-white/60 shadow-sm">
          <span class="w-2 h-2 rounded-full ${dotClass}"></span>
          <span class="text-sm font-bold text-gray-800">${status}</span>
        </div>
      </div>
    `;
  }
  
  // -- Commercial Facilities Logic --
  function getNearbyKeywords(gateName) {
     if (!gateName) return [];
     if (gateName.includes('2번')) return ['5번 출입구', '6번 출입구', 'A 카운터', 'B 카운터', 'C 카운터', 'D 카운터', 'E 카운터', 'F 카운터'];
     if (gateName.includes('3번')) return ['6번 출입구', '7번 출입구', '8번 출입구', 'F 카운터', 'G 카운터', 'H 카운터'];
     if (gateName.includes('4번')) return ['9번 출입구', '10번 출입구', '11번 출입구', 'J 카운터', 'K 카운터', 'L 카운터'];
     if (gateName.includes('5번')) return ['12번 출입구', '13번 출입구', '14번 출입구', 'L 카운터', 'M 카운터', 'N 카운터'];
     return [];
  }

  function renderRecommendations() {
      const container = document.getElementById('recommendations-container');
      if (!container || facilitiesData.length === 0) return;
      
      const list = document.getElementById('recommendations-list');
      list.innerHTML = '';
      
      // Find crowded gates (> 30 min) based on global congestionData
      // Be wary of sync issues, but data should be loaded.
      // Filter for T1 crowded items
      const crowdedGates = congestionData.filter(item => {
          const mins = parseInt(item.waitTime || 0);
          const rawId = item.gateId || '';
          // Ignore filtered gates
          if (rawId.startsWith('DG6') || rawId === 'DG1_W') return false; 
          return mins >= 30; // Threshold for recommendation
      });
      
      if (crowdedGates.length === 0) {
          // If no gates are very crowded, we could show nothing, or show general tips.
          // Let's hide if no high congestion.
          // OR: User wants to test feature. Let's lower threshold to 20 for testing if nothing > 30 found?
          // No, stick to "Honjab" status (30+).
          
          // FOR TESTING: If MOCK DATA is used, we have 35 min on DG4.
          container.classList.add('hidden');
          
          // Re-check: Mock DG4 has 35 mins. Should trigger.
          const hasSemiCrowded = congestionData.some(i => parseInt(i.waitTime||0) >= 30);
          if (hasSemiCrowded) container.classList.remove('hidden');
          return; // The render loop below will do the work.
      }
      
      container.classList.remove('hidden');

      // For matching, pick the ONE most crowded gate to focus recommendations on (to avoid clutter)
      // Or show list. Let's sort crowded gates by time DESC.
      crowdedGates.sort((a,b) => parseInt(b.waitTime) - parseInt(a.waitTime));
      
      // Take top 2 crowded gates
      const targetGates = crowdedGates.slice(0, 2);
      
      targetGates.forEach(gate => {
          const name = gate.displayName || gate.gateId;
          const keywords = getNearbyKeywords(name);
          
          // Find matching facilities
          // Filter: Must be '일반지역' (Landside) AND match keyword
          const matches = facilitiesData.filter(f => {
              const loc = f.lckoreannm || '';
              // Match logic:
              const isLandside = loc.includes('일반지역');
              const isMatch = keywords.some(k => loc.includes(k));
              return isLandside && isMatch;
          }).slice(0, 3); // Top 3 per gate

          if (matches.length > 0) {
                const itemHTML = `
                <div class="col-span-1 bg-white rounded border border-gray-100 p-3 shadow-sm">
                    <p class="text-xs font-bold text-gray-500 mb-2 border-b pb-1">
                        <span class="text-orange-500 font-black">!</span> ${name} 대기자 추천
                    </p>
                    <ul class="space-y-2">
                        ${matches.map(m => `
                            <li class="flex flex-col text-xs">
                                <div class="flex items-center justify-between">
                                    <span class="font-bold text-gray-800">${m.entrpskoreannm}</span>
                                    <span class="text-[10px] text-gray-400 bg-gray-50 px-1 rounded">${m.trtmntprdlstkoreannm || '식음료'}</span>
                                </div>
                                <p class="text-gray-500 mt-0.5 text-[10px] leading-tight">${m.lckoreannm}</p>
                            </li>
                        `).join('')}
                    </ul>
                </div>`;
                list.innerHTML += itemHTML;
          }
      });
      
      // If list is still empty (no keyword matches), hide
      if (list.innerHTML.trim() === '') {
          container.classList.add('hidden');
      }
  }
  
  // Initialize
  fetchCongestionData();

  // Refresh every 5 minutes
  setInterval(fetchCongestionData, 300000);
</script>
