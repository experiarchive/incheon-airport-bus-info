---
interface Props {
  slotId: string;
  format?: 'auto' | 'fluid' | 'rectangle';
  responsive?: boolean;
  style?: string;
  label?: string;
}

const { 
  slotId, 
  format = 'auto', 
  responsive = true,
  style = 'display:block',
  label = 'Sponsored'
} = Astro.props;

const publisherId = 'ca-pub-8355312170222120';
---

<div class="adsense-container my-10 text-center" data-ad-slot={slotId}>
  {label && (
    <p class="text-[10px] text-gray-400 text-center mb-1 font-sans">
      {label}
    </p>
  )}
  <div class="ad-wrapper w-full overflow-hidden min-h-[280px] bg-gray-50 dark:bg-gray-800/50 rounded-lg flex justify-center items-center">
    <ins class="adsbygoogle"
       style={style}
       data-ad-client={publisherId}
       data-ad-slot={slotId}
       data-ad-format={format}
       data-full-width-responsive={responsive ? "true" : "false"}
       class="w-full block"
    ></ins>
  </div>
</div>

<script>
  // Intersection Observer for early ad loading (rootMargin 300px)
  document.addEventListener('DOMContentLoaded', () => {
    const adContainers = document.querySelectorAll('.adsense-container');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const container = entry.target as HTMLElement;
          const adSlot = container.querySelector('.adsbygoogle');
          
          if (adSlot && !adSlot.hasAttribute('data-ad-loaded')) {
            // Check if slot itself has dimensions (it should if w-full is applied and container has width)
            // Check if slot itself has dimensions (it should if w-full is applied and container has width)
            if (adSlot.offsetWidth > 0) {
              adSlot.setAttribute('data-ad-loaded', 'true');
              try {
                (window.adsbygoogle = window.adsbygoogle || []).push({});
              } catch (e) {
                // Suppress error on localhost
                if (!window.location.hostname.includes('localhost')) {
                   console.error('AdSense push error:', e);
                }
              }
              // Only stop observing if we successfully attempted to load
              observer.unobserve(container);
            } else {
              // If width is 0, keep observing. It might be hidden or layout not ready.
              // The observer will trigger again if layout changes cause intersection updates,
              // or we can rely on next scroll event.
              // console.warn('AdSense slot has 0 width, skipping push'); // Squelch this warning
            }
          }
        }
      });
    }, {
      rootMargin: '300px 0px',
      threshold: 0
    });
    
    adContainers.forEach((container) => {
      observer.observe(container);
    });
  });
  
  // Declare adsbygoogle for TypeScript
  declare global {
    interface Window {
      adsbygoogle: any[];
    }
  }
</script>

<style>
  .ad-wrapper {
    min-height: 280px;
  }
  
  @media (min-width: 768px) {
    .ad-wrapper {
      min-height: 280px;
    }
  }
</style>
