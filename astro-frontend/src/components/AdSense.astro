---
interface Props {
  slotId: string;
  format?: 'auto' | 'fluid' | 'rectangle';
  responsive?: boolean;
  style?: string;
  label?: string;
}

const { 
  slotId, 
  format = 'auto', 
  responsive = true,
  style = 'display:block',
  label = '광고'
} = Astro.props;

const publisherId = 'ca-pub-8355312170222120';
---

<div class="adsense-container my-8 text-center">
  {label && (
    <div class="text-xs text-gray-400 mb-1 text-center font-sans">
      {label}
    </div>
  )}
  <div class="ad-wrapper overflow-hidden min-h-[280px] bg-gray-50 dark:bg-gray-800/50 rounded-lg flex justify-center items-center">
    <ins class="adsbygoogle"
       style={style}
       data-ad-client={publisherId}
       data-ad-slot={slotId}
       data-ad-format={format}
       data-full-width-responsive={responsive ? "true" : "false"}></ins>
    <script>
       (window.adsbygoogle = window.adsbygoogle || []).push({});
    </script>
  </div>
</div>

<style>
  /* CLS 방지를 위한 최소 높이 설정 (반응형에 따라 조정 가능) */
  .ad-wrapper {
    min-height: 280px; /* 일반적인 직사각형 광고 높이 */
  }
  
  @media (min-width: 768px) {
    .ad-wrapper {
      min-height: 280px; /* PC/태블릿 등 더 큰 화면 */
    }
  }
</style>
