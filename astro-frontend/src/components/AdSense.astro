---
interface Props {
  slotId: string;
  format?: 'auto' | 'fluid' | 'rectangle';
  responsive?: boolean;
  style?: string;
  label?: string;
}

const { 
  slotId, 
  format = 'auto', 
  responsive = true,
  style = 'display:block',
  label = 'Sponsored'
} = Astro.props;

const publisherId = 'ca-pub-8355312170222120';
---

<div class="adsense-container my-10 text-center" data-ad-slot={slotId}>
  {label && (
    <p class="text-[10px] text-gray-400 text-center mb-1 font-sans">
      {label}
    </p>
  )}
  <div class="ad-wrapper overflow-hidden min-h-[280px] bg-gray-50 dark:bg-gray-800/50 rounded-lg flex justify-center items-center">
    <ins class="adsbygoogle"
       style={style}
       data-ad-client={publisherId}
       data-ad-slot={slotId}
       data-ad-format={format}
       data-full-width-responsive={responsive ? "true" : "false"}></ins>
  </div>
</div>

<script>
  // Intersection Observer for early ad loading (rootMargin 300px)
  document.addEventListener('DOMContentLoaded', () => {
    const adContainers = document.querySelectorAll('.adsense-container');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const container = entry.target as HTMLElement;
          const adSlot = container.querySelector('.adsbygoogle');
          
          if (adSlot && !adSlot.hasAttribute('data-ad-loaded')) {
            // Check if container has dimensions to prevent "No slot size" error
            if (container.clientWidth > 0 && container.clientHeight > 0) {
              adSlot.setAttribute('data-ad-loaded', 'true');
              try {
                (window.adsbygoogle = window.adsbygoogle || []).push({});
              } catch (e) {
                console.error('AdSense push error:', e);
              }
            } else {
              // If hidden, observe again later or ignore (it will trigger again when visible if observer stays)
              // For now, we just don't push. The observer will trigger again if it enters viewport and has size.
              // Actually, IntersectionObserver triggers when it intersects. If it has 0 size, it might not intersect?
              // But if it does, we skip pushing.
            }
          }
          observer.unobserve(container);
        }
      });
    }, {
      rootMargin: '300px 0px',
      threshold: 0
    });
    
    adContainers.forEach((container) => {
      observer.observe(container);
    });
  });
  
  // Declare adsbygoogle for TypeScript
  declare global {
    interface Window {
      adsbygoogle: any[];
    }
  }
</script>

<style>
  .ad-wrapper {
    min-height: 280px;
  }
  
  @media (min-width: 768px) {
    .ad-wrapper {
      min-height: 280px;
    }
  }
</style>
