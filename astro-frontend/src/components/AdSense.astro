---
interface Props {
  slotId: string;
  format?: 'auto' | 'fluid' | 'rectangle';
  responsive?: boolean;
  style?: string;
  label?: string;
}

const { 
  slotId, 
  format = 'auto', 
  responsive = true,
  style = 'display:block',
  label = 'Sponsored'
} = Astro.props;

const publisherId = 'ca-pub-8355312170222120';
---

<div class="adsense-container my-10 text-center" data-ad-slot={slotId}>
  {label && (
    <p class="text-[10px] text-gray-400 text-center mb-1 font-sans">
      {label}
    </p>
  )}
  <div class="ad-wrapper w-full overflow-hidden min-h-[280px] bg-gray-50 dark:bg-gray-800/50 rounded-lg flex justify-center items-center">
    <ins class="adsbygoogle"
       style={`${style}; min-height: 280px;`}
       data-ad-client={publisherId}
       data-ad-slot={slotId}
       data-ad-format={format}
       data-full-width-responsive={responsive ? "true" : "false"}
       class="w-full block"
    ></ins>
  </div>
</div>

<script>
  // Intersection Observer with retry mechanism for layout timing issues
  document.addEventListener('DOMContentLoaded', () => {
    const adContainers = document.querySelectorAll('.adsense-container');
    
    // Helper function to attempt ad load with retry
    const tryLoadAd = (container, adSlot, retryCount = 0, maxRetries = 3) => {
      if (adSlot.offsetWidth > 0) {
        adSlot.setAttribute('data-ad-loaded', 'true');
        try {
          (window.adsbygoogle = window.adsbygoogle || []).push({});
        } catch (e) {
          // Only log on production domain
          if (!window.location.hostname.includes('localhost')) {
            console.error('AdSense push error:', e);
          }
        }
        return true; // Success
      } else if (retryCount < maxRetries) {
        // Layout not ready, wait for next animation frame and retry
        requestAnimationFrame(() => {
          setTimeout(() => {
            tryLoadAd(container, adSlot, retryCount + 1, maxRetries);
          }, 100); // Small delay between retries
        });
        return false; // Will retry
      }
      // Max retries exceeded, give up silently
      return false;
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const container = entry.target;
          const adSlot = container.querySelector('.adsbygoogle');
          
          if (adSlot && !adSlot.hasAttribute('data-ad-loaded')) {
            const success = tryLoadAd(container, adSlot);
            if (success) {
              observer.unobserve(container);
            }
            // If not successful, tryLoadAd will handle retries
            // We still unobserve to prevent duplicate triggers, retries handle the rest
            observer.unobserve(container);
          }
        }
      });
    }, {
      rootMargin: '300px 0px',
      threshold: 0
    });
    
    adContainers.forEach((container) => {
      observer.observe(container);
    });
  });
  
  // Declare adsbygoogle for TypeScript
  declare global {
    interface Window {
      adsbygoogle: any[];
    }
  }
</script>

<style>
  .ad-wrapper {
    min-height: 280px;
  }
  
  @media (min-width: 768px) {
    .ad-wrapper {
      min-height: 280px;
    }
  }
</style>
